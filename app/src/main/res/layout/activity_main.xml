<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- 顶部栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学習中"
                android:textColor="#FF6B9D"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/5"
                android:textColor="#9B7FA8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- 卡片容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- 正面卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/frontCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_volume"
                    android:layout_marginBottom="60dp"
                    app:tint="#FFB6D1" />

                <TextView
                    android:id="@+id/kanjiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校"
                    android:textSize="68sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/hiraganaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="がっこう"
                    android:textSize="28sp"
                    android:textColor="#C8B8D8"
                    android:layout_marginBottom="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="タップして裏返す"
                    android:textSize="15sp"
                    android:textColor="#FFB6D1"
                    android:alpha="0.8"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 背面卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/backCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="44dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意味"
                    android:textSize="16sp"
                    android:textColor="#FF6B9D"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/meaningText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textSize="44sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:layout_marginBottom="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="読み方"
                    android:textSize="16sp"
                    android:textColor="#FF6B9D"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/readingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gakkou"
                    android:textSize="22sp"
                    android:textColor="#7A8B9C"
                    android:layout_marginBottom="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="例文"
                    android:textSize="16sp"
                    android:textColor="#FF6B9D"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/exampleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="「学校へ行きます。」"
                    android:textSize="19sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="タップして戻る"
                    android:textSize="15sp"
                    android:textColor="#FFB6D1"
                    android:alpha="0.8"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp"
        android:gravity="center">

        <!-- 左箭头按钮 -->
        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chevron_left"
                android:padding="14dp"
                android:background="?attr/selectableItemBackground"/>
        </androidx.cardview.widget.CardView>

        <!-- 答えを見る按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnShowAnswer"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            app:cardCornerRadius="27dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FF6B9D"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="答えを見る"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- 次へ進む按钮 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoNext"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            app:cardCornerRadius="27dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FF6B9D"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="次へ進む"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- 右箭头按钮 -->
        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_chevron_right"
                android:padding="14dp"
                android:background="?attr/selectableItemBackground"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>